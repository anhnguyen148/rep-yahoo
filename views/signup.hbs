<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost:3001/style.css" />
    <title>Signup</title>
  </head>
  <body>
    <div class="app card">
      <div class="card-header">
        <div class="row justify-content-end">
          <div class="col-4 p-0 text-start">
            <img src="http://localhost:3001/assets/logo.png" alt="yahoo logo" style="width: 140%;">
          </i></div>
          <div class="col-8 p-0 text-end">
            <i class="fa-solid fa-window-minimize" style="font-size: 14px;"></i>
            <i class="fa-regular fa-window-maximize" style="font-size: 14px;"></i>
            <i class="fa-solid fa-xmark"></i>
          </div>
        </div>
        <div class="row justify-content-start">
          <div class="col-2 p-0 text-center">Messenger</div>
          <div class="col-2 p-0 text-center">Help</div>
        </div>
      </div>
      <div class="card-body">
        <div class="screen join-screen">
          <div class="text-center pt-3">
            <img src="http://localhost:3001/assets/unactive.png" alt="active" style="width: 160px;">
          </div>
          <form id="signup-form" action="/auth/signup" method="POST">
            {{! <h2>Sign Up</h2> }}
            <div class="form-input">
              <p>Yahoo! <u>I</u>D:</p>
              <input type="text" id="username" name="username" />
            </div>
            <div class="form-input">
              <labe for="email"><u>E</u>mail:</label>
              <input type="text" id="email" name="email">
            </div>
            <div class="form-input">
              <p><u>P</u>assword:</p>
              <input type="password" id="password" name="password" />
            </div>
            <div class="form-input">
              <labe for="password-confirm"><u>C</u>onfirm Password:</label>
              <input type="password" id="password-confirm" name="passwordConfirm">
            </div>
            <div class="form-input">
              {{#if message}}
                <p class="alert alert-danger mt-4 text-center">{{message}}</p>
              {{else if messageSuccess}}
                <p class="alert alert-success mt-4 text-center">{{messageSuccess}}</p>
              {{/if}}
            </div>
            <div class="form-input mt-4">
              <div class="row justify-content-center">
                <button type="submit" id="signup">Signup</button>
              </div>
            </div>
            <div class="form-input mt-4 text-center">
              <p>Already have an account? </p><a href="http://localhost:3001/login">Login here.</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script
      src="https://code.jquery.com/jquery-3.7.0.slim.min.js"
      integrity="sha256-tG5mcZUtJsZvyKAxYLVXrmjKBVLd6VpVccqz/r4ypFE="
      crossorigin="anonymous"
    ></script>
  </body>
</html>